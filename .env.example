# ==================================
# KNOWS STUDIOS - Environment Variables Template
# ==================================
# Copy this file to .env and fill in your actual values
# This file is safe to commit to version control

# ==================================
# SUPABASE CONFIGURATION
# ==================================
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: Supabase Service Role Key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==================================
# OPENAI CONFIGURATION
# ==================================
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-...
VITE_OPENAI_ORGANIZATION_ID=org-...

# Optional: Model configuration
VITE_OPENAI_MODEL=gpt-4-turbo-preview
VITE_OPENAI_MAX_TOKENS=4000

# ==================================
# ELEVENLABS CONFIGURATION
# ==================================
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
VITE_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs Voice ID (for text-to-speech)
VITE_ELEVENLABS_VOICE_ID=your_voice_id_here

# Optional: Voice settings
VITE_ELEVENLABS_MODEL_ID=eleven_monolingual_v1
VITE_ELEVENLABS_STABILITY=0.5
VITE_ELEVENLABS_SIMILARITY_BOOST=0.75

# ==================================
# AGENT CONFIGURATION
# ==================================
# Your custom agent ID for AI agent workflows
VITE_AGENT_ID=your_agent_id_here

# Optional: Agent configuration
VITE_AGENT_NAME=KNOWS_STUDIOS_ASSISTANT
VITE_AGENT_VERSION=1.0.0

# ==================================
# APPLICATION CONFIGURATION
# ==================================
# Environment (development, staging, production)
VITE_APP_ENV=development

# Application URL
VITE_APP_URL=http://localhost:5173

# API Base URL (if using a separate backend)
VITE_API_BASE_URL=http://localhost:3000/api

# ==================================
# OPTIONAL: THIRD-PARTY SERVICES
# ==================================
# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Stripe (for payments)
VITE_STRIPE_PUBLIC_KEY=pk_test_...

# Sentry (for error tracking)
VITE_SENTRY_DSN=https://...@sentry.io/...

# ==================================
# SECURITY
# ==================================
# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_here

# Session secret
SESSION_SECRET=your_session_secret_here
